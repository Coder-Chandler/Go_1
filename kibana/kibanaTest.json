}

#bool过滤查询，可以做组合过滤查询
#select * from testjob where (salary=20 OR title=Python) AND (salary!=30)
#查询薪资等于20k或者工作为Python的工作，排除薪资为30k的
GET lagou/testjob/_search
{
  "query": {
    "bool": {
      "should": [
        {"term":{"salary":20}},
        {"term":{"title":"python"}}
      ],
      "must_not": [
        {"term":{"salary":30}}, 
        {"term":{"salary":10}}
        ]
      }
    }
  }



