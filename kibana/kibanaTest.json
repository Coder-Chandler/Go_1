# 创建索引
PUT lagou
{
  "mappings": {
    "job": {
      "properties": {
        "title": {
          "type":"text"
        },
        "salary_min": {
          "type":"integer"
        },
        "city": {
          "type":"keyword"
        },
        "company": {
          "properties": {
            "name": {
              "type":"text"
            },
            "company_addr": {
              "type":"text"
            },
            "employee_count": {
              "type":"integer"
            }
          }
        },
        "public_date": {
          "type":"date",
          "format":"yyyy-MM-dd"
        },
        "comments": {
          "type":"integer"
        }
      }
    }
  }
}
