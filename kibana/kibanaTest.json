}

#multi_match查询
#比如可以指定多个字段
#比如查询title和desc这两个字段里面包含的python的关键词文档
GET lagou/_search
{
  "query": {
    "multi_match": {
      "query": "python",
      "fields": ["title^3","desc"]
    }
  }
}

#指定返回字段
GET lagou/_search
{
  "stored_fields": ["title","company_name"],
  "query": {
    "match": {
      "title": "python"
    }
  }
}

#通过sort把结果进行排序
GET lagou/_search
