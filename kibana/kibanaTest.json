#简单的过滤查询

#最简单的filter查询
#select * from testjob where comments=20
#filtered 薪资为20k的工作
GET lagou/testjob/_search
{
  "query": {
    "bool": {
      "must": {
        "match_all": {}
      },
      "filter": {
        "term": {
          "salary": "10"
        }
      }
    }
  }
}
#也可以指定多个值
GET lagou/testjob/_search
{
  "query": {
    "bool": {
      "must": {
        "match_all": {}
      },
      "filter": {
        "terms": {
          "salary": [10,20]
        }
      }
    }
  }
}

# select * from testjob where title="Python"
GET lagou/testjob/_search
{
  "query": {
    "bool": {
      "must": {
        "match_all": {}
      },
      "filter": {
        "term": {
          "title":"django"
        }
      }
    }
  }
}

